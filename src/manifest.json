{
  "manifest_version": 3,
  "name": "test-extention",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-256.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "icons/icon-256.png"
  },
  "content_scripts": [
    { "js": ["js/content.js"], "matches": ["https://www.copart.com/lot/*"] }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "alarms",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "pin-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+Shift+Up"
      },
      "description": "Закріпити/відкріпити вкладку testMode"
    },
    "copy-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "Command+Shift+Down"
      },
      "description": "Копіювати вкладку testMode"
    },
    "move-to-first": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Перемістити вкладку на початок testMode"
    },
    "move-to-last": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Перемістити вкладку вкінець testMode"
    }
  }
}
